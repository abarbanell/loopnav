<!DOCTYPE html>
<html>
  <head>
		<% include ../partials/head %>
		<% if (autopilot) { %>
			<meta http-equiv="refresh" content="15;url=/users/table/<%= nextPage %>/auto">
		<% } %>
		<% include ../partials/loopscript %>
  </head>
  <body class="container-fluid">
		<header>
			<% include ../partials/navbar %>
		</header>

		<div class"row">
			<div class="col-sm-2">
				<!-- sidebar left -->
				<p>Page begins with <%= users[0].userId %> </p>
        <button type="button" class="btn btn-default" onclick="window.location.href='/users/table/<%= prevPage %>'" >Previous Page</button>
				<br>
        <button type="button" class="btn btn-primary" onclick="window.location.href='/users/table/<%= nextPage %>'" >Next Page</button> 
				<br>
        <button type="button" class="btn btn-default" 
								onclick="window.location.href='/users/table/<%= nextPage %>/auto'" >Autopilot </button> 
				<br>
			</div>

			<div class="col-sm-8">
				<!-- main column -->
					<table class="table">
					<thead>
					<td>Loop badge</td>
					<td>Loop ID</td>
					</thead>
					<tbody>
          <% users.forEach(function(user, index) { %>
              <% if (user.status === 'ok-with-pic') { %> 
								<tr>
								<td>
											<!-- loop badge -->
								<div class="loop-embedded-badge" data-badge-type="profile" 
									data-user-id="<%= user.userId %>" >
								</div>	
								<td>
									<a href="/users/<%= user.userId %>" >
										<%= user.userId %>
									</a>
								</td>
								</tr>
							<% } %> 
          <% }); %>
					</tbody>
					</table>
      </div>
			
			<% if (!autopilot) { %>
				<div class="col-sm-2">
					<% include ../partials/adsidebar %>
				</div>
			<% } %>

		</div>

		<% include ../partials/bottom %>
  </body>
</html>
